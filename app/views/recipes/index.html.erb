

<% @recipes.each do |category, recipes| %>
    <h2 style="color: saddlebrown;"><%= category.name if category %> category: <%= pluralize(category.recipes.count, "Recipe") %></h2>
    <ul>
        <% recipes.each do |recipe| %>
            <p>
                <li><%= link_to recipe.name, recipe_path(recipe) %> </li>
                <strong>by: <%= mail_to recipe.user.email %></strong> 
            </p>
        <% end %>
    </ul>
<% end %>